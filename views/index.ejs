<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to CSE Motors</title>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <!-- Header Section -->
    <header class="main-header">
      <div class="header-content">
        <h1>CSE Motors</h1>
        <nav>
          <ul class="nav-links">
            <li><a href="#home">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#vehicles">Vehicles</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main>
      <!-- Welcome Section -->
      <section id="home" class="welcome-section">
        <div class="welcome-content">
          <h2>Welcome to CSE Motors!</h2>
          <p>Your one-stop shop for classic and futuristic vehicles. Explore our range today!</p>
        </div>
        <div class="welcome-image">
          <img src="/images/site/icon.png" alt="Welcome to CSE Motors" />
        </div>
      </section>

      <!-- About Section -->
      <section id="about" class="about-section">
        <h2>About Us</h2>
        <p>
          At CSE Motors, we specialize in delivering classic and futuristic vehicles
          to meet all your automotive needs. Check out our upgrades and features!
        </p>
      </section>

      <!-- Vehicles Gallery -->
      <section id="vehicles" class="gallery-section">
        <h2>Explore Our Vehicles</h2>
        <div class="gallery-grid">
          <% const vehicles = [
            { name: "Adventador", image: "adventador.jpg", price: 75000 },
            { name: "Aerocar", image: "aerocar.jpg", price: 100000 },
            { name: "Batmobile", image: "batmobile.jpg", price: 120000 },
            { name: "Camaro", image: "camaro.jpg", price: 30000 },
          ]; %>
          <% vehicles.forEach(vehicle => { %>
            <div class="vehicle-card">
              <img src="/images/vehicles/<%= vehicle.image %>" alt="<%= vehicle.name %>" />
              <h3><%= vehicle.name %></h3>
              <p>Price: $<%= vehicle.price.toLocaleString() %></p>
              <a href="/inventory/detail/<%= vehicle.name.replace(' ', '-') %>" class="view-details">View Details</a>
            </div>
          <% }); %>
        </div>
      </section>

      <!-- Contact Section -->
      <section id="contact" class="contact-section">
        <h2>Contact Us</h2>
        <p>Feel free to reach out to CSE Motors for inquiries or test drives.</p>
        <p>Email: info@csemotors.com | Phone: 1-800-CSE-MOTORS</p>
      </section>
    </main>

    <!-- Footer -->
    <footer class="main-footer">
      <p>&copy; 2025 CSE Motors. All rights reserved.</p>
    </footer>
  </body>
</html>
