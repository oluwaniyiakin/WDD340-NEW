<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
  </head>
  <body>
    <%- include('partials/header') %>

    <main>
      <!-- Navigation Section -->
      <header class="main-header">
        <h1>HOME</h1>
        <nav>
          <ul class="nav-links">
            <li><a href="#home">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
        </nav>
      </header>

      <!-- Welcome Section -->
      <section id="home" class="welcome-section">
        <div class="welcome-content">
          <h2>Welcome to CSE Motors!</h2>
          <h3 class="highlight">DMC Delorean</h3>
          <ul class="features-list">
            <li>3 Cup holders</li>
            <li>Superman doors</li>
            <li>Fuzzy dice!</li>
          </ul>
          <button class="cta-button">Own Today</button>
        </div>
        <div class="welcome-image">
          <img src="/images/site/icon.PMG" alt="DMC Delorean with futuristic design and doors open">
        </div>
      </section>

      <!-- Vehicle Gallery Section -->
      <section class="vehicle-gallery" id="vehicles">
        <h2>Explore Our Vehicles</h2>
        <div class="vehicle-grid">
          <% if (vehicles && vehicles.length > 0) { %>
            <% vehicles.forEach(vehicle => { %>
              <div class="vehicle-card">
                <img src="/images/vehicles/<%= vehicle.image %>" alt="<%= vehicle.name %>">
                <h3><%= vehicle.name %></h3>
              </div>
            <% }); %>
          <% } else { %>
            <p>No vehicles available at the moment. Check back later!</p>
          <% } %>
        </div>
      </section>

      <!-- Delorean Upgrades Section -->
      <section id="about" class="upgrades-section">
        <h2>Delorean Upgrades</h2>
        <div class="upgrades-grid">
          <div class="upgrade-item">
            <img src="/images/upgrades/flux-capacitor.PNG" alt="Flux Capacitor Upgrade">
            <p>Flux Capacitor</p>
          </div>
          <div class="upgrade-item">
            <img src="/images/upgrades/flame.jpg" alt="Flame Decals Upgrade">
            <p>Flame Decals</p>
          </div>
          <div class="upgrade-item">
            <img src="/images/upgrades/bumper_sticker.jpg" alt="Bumper Sticker Upgrade">
            <p>Bumper Stickers</p>
          </div>
          <div class="upgrade-item">
            <img src="/images/upgrades/hub-cap.jpg" alt="Hub Caps Upgrade">
            <p>Hub Caps</p>
          </div>
        </div>
      </section>
    </main>

    <footer id="contact">
      <p>Contact Us at CSE Motors!</p>
    </footer>
  </body>
</html>
