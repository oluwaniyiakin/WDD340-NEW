<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  <!-- Header -->
  <header>
    <h1>CSE Motors</h1>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="vehicle-detail">
    <% if (vehicle) { %>
      <div class="vehicle-container">
        <!-- Vehicle Image -->
        <div class="vehicle-images">
          <img src="/images/vehicles/<%= vehicle.inv_image %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>">
        </div>

        <!-- Vehicle Information -->
        <div class="vehicle-info">
          <h2><%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %></h2>
          <p><strong>Price:</strong> $<%= new Intl.NumberFormat("en-US").format(vehicle.inv_price) %></p>
          <p><strong>Mileage:</strong> <%= vehicle.inv_mileage ? vehicle.inv_mileage.toLocaleString() : "N/A" %> miles</p>
          <p><strong>Color:</strong> <%= vehicle.inv_color || "Not Specified" %></p>
          <p><strong>Fuel Type:</strong> <%= vehicle.inv_fueltype || "Unknown" %></p>
          <p><strong>Transmission:</strong> <%= vehicle.inv_transmission || "Unknown" %></p>
          <p><strong>Description:</strong> <%= vehicle.inv_description || "No description available." %></p>

          <div class="vehicle-actions">
            <button>Start My Purchase</button>
            <button>Contact Us</button>
            <button>Schedule Test Drive</button>
            <button>Apply for Financing</button>
          </div>
        </div>
      </div>
    <% } else { %>
      <h2>Vehicle Not Found</h2>
      <p>The vehicle you are looking for does not exist or may have been removed.</p>
      <a href="/">Return to Home</a>
    <% } %>
  </main>

  <!-- Sidebar: Explore Our Vehicles -->
  <aside class="explore-vehicles">
    <h2>Explore Our Vehicles</h2>
    <ul>
      <% if (vehicles && vehicles.length > 0) { %>
        <% vehicles.forEach(car => { %>
          <li>
            <a href="/inventory/detail/<%= car.inv_id %>">
              <%= car.inv_make %> <%= car.inv_model %> - $<%= new Intl.NumberFormat("en-US").format(car.inv_price) %>
            </a>
          </li>
        <% }) %>
      <% } else { %>
        <li>No other vehicles available.</li>
      <% } %>
    </ul>
  </aside>

  <!-- Footer -->
  <footer>
    <p>&copy; 2025 CSE Motors</p>
    <a href="/error">Trigger 500 Error</a>
  </footer>

</body>
</html>
