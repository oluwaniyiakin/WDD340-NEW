<%- include('../partials/header.ejs') %>
<h1>Add Vehicle</h1>
<% if (messages.notice) { %>
    <p class="message"><%= messages.notice %></p>
<% } %>
<form action="/inventory/add-inventory" method="POST">
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" required>

    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" required>

    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" required>

    <label for="inv_classification_id">Classification:</label>
    <select id="inv_classification_id" name="inv_classification_id">
        <% classifications.forEach(classification => { %>
            <option value="<%= classification.classification_id %>">
                <%= classification.classification_name %>
            </option>
        <% }); %>
    </select>

    <button type="submit">Add Vehicle</button>
</form>
<%- include('../partials/footer') %>